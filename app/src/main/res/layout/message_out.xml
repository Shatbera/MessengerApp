<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="4dp">

  <TextView
      android:id="@+id/textMessageSent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="280dp"
      android:maxWidth="280dp"
      android:padding="@dimen/medium_margin"
      android:background="@drawable/bg_msg_bubble_sent"
      android:textColor="@color/light_blue"
      android:textSize="@dimen/chat_text_size"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginEnd="@dimen/standard_margin"
      tools:text="Hi! I'm from Georgia and what about you?" />

  <TextView
      android:id="@+id/textTimeSent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/chat_text_size"
      android:textColor="@color/gray"
      app:layout_constraintEnd_toStartOf="@id/textMessageSent"
      app:layout_constraintBottom_toBottomOf="@id/textMessageSent"
      android:layout_marginEnd="8dp"
      tools:text="16:22" />

</androidx.constraintlayout.widget.ConstraintLayout>
