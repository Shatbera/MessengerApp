<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

  <TextView
      android:id="@+id/textTimeSent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/standard_margin"
      android:textSize="@dimen/chat_text_size"
      android:textColor="@color/gray"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="16:22" />

  <TextView
      android:id="@+id/textMessageSent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/standard_margin"
      android:padding="@dimen/medium_margin"
      android:background="@drawable/bg_msg_bubble_sent"
      android:textColor="@color/light_blue"
      android:textSize="@dimen/chat_text_size"
      app:layout_constrainedWidth="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/textTimeSent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="Hi! I'm from Georgia and what about you?." />

</androidx.constraintlayout.widget.ConstraintLayout>
